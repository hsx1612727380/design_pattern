package cn.hsx.strategy2;

import java.lang.Comparable;

public class Cat implements Comparable<Cat> {

	private String name;
	private int height;
	private int age;
	// private Comparator comparator = new CatAgeComparator();
	private Comparator comparator = new CatHeightComparator();
	
	public Cat() {
		
	}
	
	public Cat(String name, int height, int age) {
		this.name = name;
		this.height = height;
		this.age = age;
	}
	
	public Cat(int age, int height) {
		this.age = age;
		this.height = height;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getHeight() {
		return height;
	}

	public void setHeight(int height) {
		this.height = height;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}
	
	public Comparator getComparator() {
		return comparator;
	}
	
	public void setComparator(Comparator comparator) {
		this.comparator = comparator;
	}

	@Override
	public String toString() {
		return "age = " + age + " height = " + height;
	}

	/*@Override
	public int compareTo(Object o) {
		if (o instanceof Cat) {
			Cat cat = (Cat) o;
			if (this.getAge() > cat.getAge()) {
				return 1;
			}
			else if(this.getAge() < cat.getAge()) {
				return -1;
			}
			else {
				return 0;
			}
		}
		return -100;
		return comparator.compare(this, o);
	}*/

	@Override
	public int compareTo(Cat o) {
		return comparator.compare(this, o);
	}
	
}
