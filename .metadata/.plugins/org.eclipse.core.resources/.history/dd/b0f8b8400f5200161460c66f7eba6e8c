package cn.hsx.proxy1;

public class TimeProxy implements Moveable {

	Moveable tank;
	
	public TimeProxy(Moveable tank) {
		this.tank = tank;
	}

	@Override
	public void move() {
		long start = System.currentTimeMillis();
		tank.move();
		long end =  System.currentTimeMillis();
		System.out.println("move time " + (end - start));
	}

	@Override
	public void stop() {
		long start = System.currentTimeMillis();
		tank.stop();
		long end =  System.currentTimeMillis();
		System.out.println("move time " + (end - start));
	}

}
